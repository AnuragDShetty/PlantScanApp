<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/registrationLayout"
        android:layout_width="match_parent"
        android:layout_height="516sp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="invisible">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="25sp"
            android:paddingTop="10sp"
            android:text="Enter your name"
            android:textColor="#000000"
            android:layout_marginTop="10sp"/>

        <EditText
            android:id="@+id/uregname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="25sp"
            android:background="#37DACDCD"
            android:textColor="#375E57"
            android:inputType="text"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="25sp"
            android:paddingTop="10sp"
            android:text="Enter your email"
            android:textColor="#000000"
            android:layout_marginTop="10sp"/>

        <EditText
            android:id="@+id/uregemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginTop="10sp"
            android:textColor="#375E57"
            android:textSize="30sp"
            android:inputType="textEmailAddress"
            android:background="#37DACDCD"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="25sp"
            android:paddingTop="10sp"
            android:layout_marginTop="10sp"
            android:text="Enter password"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/uregpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:inputType="textPassword"
            android:background="#37DACDCD"
            android:layout_marginTop="10sp"
            android:textColor="#375E57"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Register"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:fontFamily="sans-serif-black"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="60sp"
            android:layout_marginVertical="40sp"
            android:background="@drawable/button_style_1"
            android:text="Register"
            />
    </LinearLayout>

    <include layout="@layout/already_logged_in"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="LEAF SCANNER"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:padding="10sp"
        android:textColor="@color/APPNAME"
        android:layout_marginBottom="25sp"
        />


</RelativeLayout>